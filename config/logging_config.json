{
    "version": 1,
    "disable_existing_loggers": "False",
    "formatters": {
      "simple":  {
        "format":  "%(asctime)s | %(filename)s | %(funcName)s | %(levelname)s: %(message)s",
        "datefmt": "%Y-%m-%dT%H:%M:%S%z"
      }},
    "handlers": {
      "file": {
        "class": "logging.handlers.RotatingFileHandler",
        "level": "DEBUG",
        "formatter": "simple",
        "filename": "logger/logs/scraper.log",
        "maxBytes": 5000000,
        "backupCount": 3
      }
    },
  "loggers": {
    "root": {
      "level": "DEBUG",
      "handlers": ["file"]
    }
  }
}
